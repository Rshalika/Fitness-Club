<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.AppTheme.Button.IconButton" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="TitleText0" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/helvetica_neue_ltgeow82_75bold_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textColor">#1b2025</item>
    </style>

    <style name="TitleText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/helvetica_neue_ltgeow82_65medium_2</item>
        <item name="android:textSize">15.6sp</item>
        <item name="android:lineSpacingExtra">-0.6sp</item>
        <item name="android:textColor">#1b2025</item>
    </style>

    <style name="CaptionText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/helvetica_neue_ltgeow82_45light</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#1b2025</item>
    </style>

    <style name="CaptionText2" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/helvetica_neue_ltgeow82_55roman_2</item>
        <item name="android:textSize">11.7sp</item>
        <item name="android:lineSpacingExtra">1.8sp</item>
        <item name="android:textColor">#1b2025</item>
    </style>

    <style name="HighLightInfoBody" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/helvetica_neue_ltgeow82_75bold_2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">19.5sp</item>
        <item name="android:textColor">#252c43</item>
    </style>


    <style name="ItemBody" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/helvetica_neue_ltgeow82_65medium_2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">-0.5sp</item>
        <item name="android:textColor">#1b2025</item>
    </style>

    <style name="ItemBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/helvetica_neue_ltgeow82_75bold_2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1b2025</item>
    </style>

    <style name="RedText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">-0.5sp</item>
        <item name="android:textColor">#ed2f3f</item>
    </style>


</resources>